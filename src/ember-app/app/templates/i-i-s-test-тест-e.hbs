<h3 class="ui header">{{t "forms.i-i-s-test-тест-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field" data-test-i-i-s-test-тест-e-хЗ="true">
    <label>{{t "forms.i-i-s-test-тест-e.хЗ-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-test-хуй")
      value=model.хЗ
      class=(if (v-get validationModel "хЗ" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "хЗ" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-test-тест-e.ном-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.ном
      displayAttributeName="нома"
      autocomplete=true
      relationName="ном"
      projection="номL"
      title=(t "forms.i-i-s-test-тест-e.ном-caption")
      readonly=readonly
      componentName="номLookup"
      class=(if (v-get validationModel "ном" "isInvalid") "error")
      data-test-i-i-s-test-тест-e-ном=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "ном" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.ном.контр.когнтра
      class=(if (v-get validationModel.ном.контр "когнтра" "isInvalid") "error")
      label=(t "forms.i-i-s-test-тест-e.ном.контр.когнтра-caption")
      data-test-i-i-s-test-тест-e-ном-контр-когнтра=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.ном.контр "когнтра" "message")}}
  </div>
</form>
